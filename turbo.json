{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "coverage": {
      "dependsOn": ["rooks#build"],
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "all-checks": {
      "dependsOn": ["coverage", "rooks#typecheck", "lint"],
      "cache": false,
      "outputs": []
    },
    "test-hooks": {
      "cache": false,
      "outputs": []
    },
    "test": {
      "cache": false,
      "dependsOn": ["rooks#build"],
      "outputs": ["coverage/**", "dist/**", ".next/**"]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "prepare-publish": {
      "dependsOn": ["rooks#build"],
      "outputs": ["dist/**"]
    }
  }
}
