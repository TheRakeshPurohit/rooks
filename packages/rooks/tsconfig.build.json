{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "composite": false,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "incremental": true,
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./src/**/*.spec.ts", "./src/**/*.spec.tsx"]
}
